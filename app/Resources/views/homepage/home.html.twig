{% block body %}

    <div class="site-wrapper">

      <div class="site-wrapper-inner">

        <div class="cover-container">

          <div class="masthead clearfix">
            <div class="inner">
              <h3 class="masthead-brand">brycestevens.me</h3>
              <nav>
                <ul class="nav masthead-nav">
                  <li class="active"><a href="{{ path('app_home') }}"><i>Home</i></a></li>
                  <li><a href="{{ path('app_projects') }}"><i>Projects</i></a></li>
                  <li><a href="{{ path('app_contact') }}"><i>Contact</i></a></li>
